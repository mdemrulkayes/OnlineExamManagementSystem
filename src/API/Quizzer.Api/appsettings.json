{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Elastic.Serilog.Sinks" ],
    "WriteTo": [
      {
        "Name": "Debug"
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "bootstarpMethod": "Silent",
          "nodes": [ "http://elastichost:9200" ],
          "ilmPolicy": "quizzer-policy",
          "dataStream": "quizzer",
          "includeHost": true,
          "includeUser": true,
          "includeProcess": true,
          "includeActivity": true
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ConnectionStrings": {
    "IdentityModuleDbContext": "Server=localhost,1401;database=Quizzer;User Id=sa;Password=Pass@word;Encrypt=false",
    "QuestionModuleDbContext": "Server=localhost,1401;database=Quizzer;User Id=sa;Password=Pass@word;Encrypt=false"
  },
  "JwtConfiguration": {
    "JwtIssuer": "https://quizzer.api",
    "JwtAudience": "https://quizzer.api",
    "JwtKey": "b52e044d-a65b-4360-b1ca-da670ec64ec2",
    "JwtExpireDay": 1
  }
}
