  "ConnectionStrings": {
    //"OemsDbConnection": "Server=.\\SQL2K17;Database=OnlineExamManagementSystem;Integrated Security=SSPI"
    "OemsDbConnection": "Server=.\\SQL2K17;Database=OnlineExamManagementSystem;Integrated Security=SSPI"
  },
  "JwtIssuer": "a6f7064e-ebc3-477b-b2dd-9d08a167f995",
  "JwtAudience": "http://localhost:57659",
  "JwtKey": "b52e044d-a65b-4360-b1ca-da670ec64ec2",
  "JwtExpireDay": 1,
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=.\\SQL2K17;Database=OnlineExamManagementSystem;Integrated Security=SSPI",
          "tableName": "ApplicationLog",
          "autoCreateSqlTable": true //this will create the required table automatically
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}